<div class="col-md-12">
  <%= link_to("Write a Post", new_group_posts_path(@group), class: "btn btn-default pull-right")%>
  <% if current_user && current_user == @group.user %>
    <div class="group">
      <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    </div>
  <% end %>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>
</div>